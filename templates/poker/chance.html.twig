{# templates/chance.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Chance to guess a card{% endblock %}

{% block body %}
    <div class="container">
        <p class="h2 text-center m-4">Your chance to draw the {{ card }} card is {{ chance|number_format(2, '.', ',') }}%</p>

        <div class="row">
            <div class="col text-center">
                <a href="{{ path('draw_a_card') }}" class="btn btn-primary">Draw!</a>
            </div>
        </div>
    </div>
{% endblock %}
